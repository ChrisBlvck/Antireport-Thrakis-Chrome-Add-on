{
  "manifest_version": 3,
  "name": "Antireport-Thrakis",
  "version": "1.0",
  "description": "Read the latest articles from Antireport-Thrakis instantly from your browser. Simple, lightweight, and open-source.",
  "icons": {
    "16": "Images/icon16.png",
    "48": "Images/icon48.png",
    "128": "Images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "Images/icon16.png",
      "48": "Images/icon48.png",
      "128": "Images/icon128.png"
    }
  },
  "permissions": [
    "notifications"
  ],
  "host_permissions": [
    "https://www.antireport-thrakis.gr/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
